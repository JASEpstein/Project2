  {{#if Subscriptions}}
   
  {{!-- {{#grouped_each 4 Subscriptions}} --}}
  <div class="container cartContainer">
  <div class="row cart-row">  
    {{#each Subscriptions}}
    <script>{{this}}</script>
    <div class="col-md-3 col-sm-6 product">
      <div class="thumbnail">
        <img src="{{this.img}}" alt="{{this.name}}">
        </a>
        <div class="caption">
          <h3>{{this.name}}</h3>
          <p class="price">${{this.price}}</p>
          <form method="POST" action="/cart/{{this.id}}/?_method=PUT">
            <input type="hidden" value={{this.id}} name="itemId">
            <div class="form-group">
              <label for="quantity">Qty</label>
              <select class="form-control product-dropdown" id="quantity" name="quantity">
                <option selected>{{this.quantity}}</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
              <button class="btn btn-default noPad update" type="submit" value="Submit">Update Quantity</button>
            </div>
          </form>
          <form method="DELETE" action="/cart/{{this.id}}?_method=DELETE">
            <div class="form-group">
              <div class="btn-group"> 
                <button class="btn btn-danger remove" type="submit" value="Submit">Remove</button>
              </div>
              <input type="hidden" value={{this.quantity}} name="quantity">
            </div>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  </div>
  {{!-- {{/grouped_each}} --}}

  {{else}}
  <p>There are no items in your cart.</p>
  {{/if }}
   
  <div class="row">
    <div class="col-md-12">
    {{#if Subscriptions}}
      <a href="/order" class="btn btn-primary checkout">Checkout</a>
    {{else}}
      <a href="/" class="btn btn-primary">Lets go shopping!</a>
    {{/if}}
    </div>
  </div>
</div>
