<h1>{{title}}</h1>
{{!-- if there are products in the cart then display information --}}
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{!--loop through each product--}}
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    {{!-- item title --}}
                    <strong>{{ this.item.title }}</strong><br/>
                    {{!-- item description --}}
                    <em>{{{this.item.description}}}</em>
                </div>
                <div class="col-xs-2 text-right">
                    {{!-- item qty --}}
                    <span class="badge">{{ this.quantity }}</span>
                </div>
                <div class="col-xs-3 text-right">
                    {{!-- item price --}}
                    {{ this.price }} 
                </div>
                {{!-- button to remove items from cart --}}
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        {{!-- total price --}}
        <strong>Total: {{ totalPrice }} </strong>
    </div>
    <hr>
    {{!-- button to initiate checkout --}}
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Checkout</a>
    </div>
{{ else }} 
{{!-- if there are no items in the car then display  --}}
    Your shopping cart is empty.
{{/if}}